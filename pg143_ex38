#include<stdio.h>
#include<math.h>
float main()
  {
      float n1,n2;
      char O;

      printf("Insira a operação desejada: ");
      scanf("%f ",&n1);
      scanf("%c ",&O);
      scanf("%f",&n2);

      switch (O)
      {
          case '+':
          printf("O resultado da soma e: %.1f",n1+n2);
          break;

          case '-':
          printf("O resultado da subtracao e: %.1f", n1-n2);
          break;

          case '*':
          printf("O resultado da multiplicacao e: %.1f", n1*n2);
          break;

          case '/':
          printf("O resultado da divisao e: %.1f", n1/n2);
          break;

          default:
            printf("Operacao invalida.");
      }

  }
