#include<stdio.h>
  int main ()
{
    int x;
    printf("Insira um valor inteiro:");
    scanf("%i",&x);

    if(x==0)
    {
        printf("Numero nulo");
    }
    else
       if(x>0)
    {
        printf("O numero e positivo");
    }

    else
    {
        printf("O numero e negativo");
    }
}
